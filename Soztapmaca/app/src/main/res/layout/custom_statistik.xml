<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#957B2F"
    android:orientation="vertical"

    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rela_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9C28D">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/bagla3"
            android:gravity="center"

            android:text="Statistik Göstəricilər"
            android:textAllCaps="true"
            android:textColor="#4CAF50"

            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bagla3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_closed" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Ümumi  sualların sayı"

        android:textColor="@color/teal_700"

        android:textStyle="bold" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:id="@+id/prog1"

        android:layout_height="40dp"
        android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/ssual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"

        android:text="1/10"
        android:textColor="@color/teal_700" />


    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_700"


        android:text="Ümumi kəlmələr sayı"



        android:textStyle="bold" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:id="@+id/prog2"
        android:layout_height="40dp"
        android:layout_marginTop="5dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/skelme"
        android:textColor="@color/teal_700"

        android:layout_marginRight="5dp"
        android:text="1/10" />


    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Ümumi səhvlərin sayı"
        android:textColor="@color/teal_700"

        android:textStyle="bold" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:id="@+id/prog3"
        android:layout_height="40dp"
        android:layout_marginTop="5dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_700"

        android:id="@+id/sehvtexmin"

        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:text="1/10" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/linerlayout_statistic"

        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center">


        <Button
            android:id="@+id/esas"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:background="@drawable/ayarlar_draw"
            android:text="Əsas Menyuya Dön "
            android:padding="3dp"
            android:textAllCaps="true"
            android:textColor="#FFC107"

            android:textSize="11sp" />


        <Button
            android:id="@+id/tekraroyna"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"

            android:background="@drawable/ayarlar_draw"
            android:text="Təkrar Oyna "
            android:textAllCaps="true"


            android:textColor="#FFC107"

            android:textSize="13sp" />



    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="#D9C28D"/>



</LinearLayout>