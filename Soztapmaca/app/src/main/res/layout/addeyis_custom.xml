<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#957B2F"
    android:orientation="vertical"

    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rela"
        android:background="#D9C28D"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ayar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/bagla2"
            android:gravity="center"

            android:text="Adınızı dəyişin"
            android:textAllCaps="true"
            android:textColor="#4CAF50"

            android:textSize="19sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bagla2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_closed" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">



        <EditText
            android:layout_width="match_parent"
            android:textSize="19sp"
            android:textAlignment="center"
            android:id="@+id/editaddeyis"
            android:textStyle="bold"
            android:textColorHint="#FFEB3B"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Adınızı daxil edin"

            android:layout_height="wrap_content"/>



        <Button
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:text="Adınızı dəyişin "
            android:id="@+id/addeyisbutton2"
            android:layout_marginTop="15dp"
            android:textAllCaps="true"
            android:padding="3dp"
            android:textSize="11sp"
            android:textColor="#FFC107"

            android:background="@drawable/ayarlar_draw"/>




    </LinearLayout>




</LinearLayout>