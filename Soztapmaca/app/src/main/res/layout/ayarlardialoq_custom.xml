<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#957B2F"
    android:padding="7dp"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#D9C28D"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bagla"
            android:gravity="center"

            android:text="SETTINGS"
            android:textAllCaps="true"
            android:textColor="#4CAF50"

            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bagla"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_closed" />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"

            android:text="Musiqi Aç-bağla :"
            android:textStyle="bold"
            android:textColor="#FFEB3B"
            android:textSize="10sp"/>




    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"

        android:layout_height="wrap_content">




        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/radioac"
            android:text="Aç"
            android:textSize="10sp"
            android:textColor="#FFEB3B"

            android:layout_height="wrap_content"/>



        <RadioButton
            android:layout_width="wrap_content"
            android:textColor="#FFEB3B"
            android:id="@+id/radiobagla"
            android:text="Bağla"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"

            android:layout_height="wrap_content"/>



    </RadioGroup>






    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <Button
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:text="Ad Dəyişmək "
            android:id="@+id/addeyisbutton"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textAllCaps="true"

            android:padding="3dp"
            android:textColor="#FFC107"

            android:background="@drawable/ayarlar_draw"/>


        <Button
            android:id="@+id/resmdeyisbutton"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/ayarlar_draw"
            android:text="Rəsm Dəyişmək "
            android:padding="3dp"

            android:textColor="#FFC107"

            android:textAllCaps="true"

            android:textSize="10sp"

            android:textStyle="bold" />


    </LinearLayout>




</LinearLayout>